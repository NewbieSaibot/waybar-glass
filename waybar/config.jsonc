{
    "layer": "top",
    "modules-left": ["hyprland/workspaces", "wlr/taskbar"],
    "modules-center": [
                        /*"hyprland/window",*/
                        "clock"
                        ],
    "modules-right": ["tray",
                    /* "cpu", "memory", "temperature", */
                    "custom/notification",
                    "custom/weather",
                    "pulseaudio",
                    "backlight",
                    "network",
                    "group/group-battery",
                    /*"custom/power"*/
                    "group/group-logout"
                    ],
    "tray": {
        "spacing": 10
    },
    "cpu": {
        "format": "　{usage}%"
    },
    "memory": {
        "format": "　{}%"
    },
    "backlight": {
        //"device": "intel_backlight",
        "format": "　{percent}%",
        "format-icons": ["", ""]
    },
    "battery": {
        "interval": 1,
        "format": "{icon} {capacity}%",
        "states": {
            "full": 95,
            "great": 80,
            "good": 70,
            "well": 45,
            "warning": 20,
            "critical": 10
        },
        "format-icons": {
            "default": "󱊣",
            "discharging-full": "󱊣",
            "discharging-great": "󱊣",
            "discharging-good": "󱊢",
            "discharging-well": "󱊡",
            "discharging-warning": "󱊡",
            "discharging-critical": "󰂃",
            "charging-full": "󱊦 ",
            "charging-great": "󱊦 ",
            "charging-good": "󱊥 ",
            "charging-well": "󱊤 ",
            "charging-warning": "󱊤 ",
            "charging-critical": "󰢟 "
        },
        "events": {
            "on-discharging-warning": "notify-send -u normal 'Low Battery'",
            "on-discharging-critical": "notify-send -u critical 'Very low battery'",
            "on-charging-full": "notify-send -u normal 'Battery charged'"
        }
    },
    "network": {
        "interval": 1,
        "format-wifi": "　{signalStrength}%",
        "format-ethernet": "{ifname}: {ipaddr}/{cidr} ethernet",
        "format-disconnected": " ",
        "on-click": "nm-connection-editor",
        "tooltip-format": " {bandwidthDownBytes} 󰬬 {bandwidthUpBytes}",
        "tooltip-format-ethernet": "{ifname}  {bandwidthDownBytes} 󰬬 {bandwidthUpBytes}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)     {bandwidthDownBytes} 󰬬 {bandwidthUpBytes}",
        "tooltip-format-disconnected": "Disconnected"
    },
    "pulseaudio": {
        "format": "{icon}  {volume}%",
        "format-icons": {
            "muted": "",
            "bluetooth": "",
            "headphones": "",
            "headset": "",
            "phone": "",
            "phone-muted": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "max-volume": 100,
        "on-click": "pavucontrol"
    },
    "temperature": {
        "critical-threshold": 60,
        "format": "{icon} {temperatureC}°C",
        "format-icons": [""]
    },
    "clock": {
        "interval": 1,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d}",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "week-pos": "right",
            "on-scroll": 1,
            "format": {
                "months":     "<span><b>{}</b></span>",
                "days":       "<span><b>{}</b></span>",
                "weeks":      "<span><b>W{}</b></span>",
                "weekdays":   "<span><b>{}</b></span>",
                "today":      "<span><b><u>{}</u></b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode",
            "on-scroll-up": "tz_up",
            "on-scroll-down": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "power-profiles-daemon": {
          "format": "{icon} ",
          "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
          "format-icons": {
            "default": "",
            "performance": "",
            "balanced": "",
            "power-saver": ""
          }
    },
    "hyprland/workspaces": {
        "format": "{id}",
        "persistent-workspaces": {
            "*": 0
        }
    },
    "hyprland/window": {
        "format": "{}"
    },
    "custom/power": {
        "format": "{icon} ",
        "format-icons": [""],
        "on-click": "systemctl poweroff",
        "tooltip-format": "Power off"
    },
    "custom/reboot": {
        "format": "{icon} ",
        "format-icons": [""],
        "on-click": "systemctl reboot",
        "tooltip-format": "Reboot"
    },
    "custom/lock": {
        "format": "{icon} ",
        "format-icons": [""],
        "on-click": "hyprctl dispatch exit",
        "tooltip-format": "Logout"
    },
    "custom/sleep": {
        "format": "{icon} ",
        "format-icons": ["󰤄"],
        "on-click": "systemctl sleep",
        "tooltip-format": "Sleep"
    },
    "custom/weather": {
        "exec": "${HOME}/.config/waybar/scripts/get_weather.sh Japan+Tokyo",
        "return-type": "json",
        "format": "{}",
        "tooltip": true,
        "interval": 3600
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 20,
        "spacing": 3,
        "on-click-middle": "close",
        "tooltip-format": "{title}",
        "on-click": "activate"
    },
      "custom/notification": {
        "tooltip": false,
        "format": "{icon} ",
        "format-icons": {
          "notification": "<span foreground='red'><sup><small></small></sup></span>",
          "none": "",
          "dnd-notification": "<span foreground='red'><sup><small></small></sup></span>",
          "dnd-none": "",
          "inhibited-notification": "<span foreground='red'><sup><small></small></sup></span>",
          "inhibited-none": "",
          "dnd-inhibited-notification": "<span foreground='red'><sup><small></small></sup></span>",
          "dnd-inhibited-none": ""
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
      },
      "group/group-logout": {
        "orientation": "horizontal",
        "modules": [
            "custom/power",
            "custom/lock",
            "custom/reboot",
            "custom/sleep"
        ],
        "drawer": {
            "children-class": "not-power",
            "transition-duration": 500,
            "transition-left-to-right": false
        }
      },
      "group/group-battery": {
        "orientation": "horizontal",
        "modules": [
            "battery",
            "power-profiles-daemon"
        ],
        "drawer": {
            "children-class": "not-battery",
            "transition-duration": 500,
            "transition-left-to-right": false
        }
      }
}
